mixin rating(starNumber)  
    .rating
        - var i=0
        - var n=5
        if (starNumber<=0)
            while i<n
                <i class="material-icons">star_border</i>
                -i++
        else if (starNumber<5)
            while i<starNumber
                <i class="material-icons">star</i>
                -i++
            while i<n
                <i class="material-icons">star_border</i>
                -i++
        else 
            while i<n
                <i class="material-icons">star</i>
                -i++